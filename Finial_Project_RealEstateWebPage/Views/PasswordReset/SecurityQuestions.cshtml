@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "Security Questions";
}

<!DOCTYPE html>

<html>
<head>
    <title>
        Security Questions
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/LoginPage.css" />

</head>
<body>
    <h1>
        Security Questions
    </h1>
    <br />
    <br />

    <form asp-controller="Verification" asp-action="VerifyUser" method="POST" class="loginPage">

        <label for="SecurityQuestion1"></label>
        Answer 1: <input type="text" name="AnswerSecurityQuestion1" /> <br />

        <label for="SecurityQuestion2"></label>
        Answer 2: <input type="text" name="AnswerSecurityQuestion2" /> <br />

        <label for="SecurityQuestion3"></label>
        Answer 3: <input type="text" name="AnswerSecurityQuestion3" /> <br />


        <div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <button type="submit" class="loginPage" style="width: 91px;">Submit</button>

    </form>

</body>

</html>

