@model Finial_Project_RealEstateWebPage.Models.Home

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "HomePage";
}

<!DOCTYPE html>

<html>
<head>
    <title>
        DashBord
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/nav.css"/>
    <link rel="stylesheet" href="~/css/HomePage.css"/>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>


</head>
<body>
    <header>
        <nav class="custom-navbar">
            <div class="container">
                <a class="brand">Mr. Home's</a>
                <ul class="nav-links">
                    <li><a href="/Account/Login" class="active">Sign In</a></li>
                    <li><a href="/Account/SignUp" class="active">Register</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="titleContainer">
       @*         <div class="buttonContainer">
            <form asp-action="Login" asp-controller="Account" method="get" style="display: inline;">
                <button type="submit" class="btnAccount">Login</button>
            </form>
            <form asp-action="SignUp" asp-controller="Account" method="get" style="display: inline;">
                <button type="submit" class="btnAccount">Sign Up</button>
            </form>
        </div> 
        *@
    </div>

 <div class="Container">
        <div class="Search">
            <form asp-action="SearchHomes" asp-controller="Home" method="post">
                <div id="SearchTab">
                    <input type="text" id="txtSearchTab" name="txtSearchTab" placeholder="Enter City or Zipcode" />
                    <button type="submit">Search</button>
                </div>
                <br />
                <div id="Options">
                    <div id="HomeType">
                        <label for="rdbHomeType">Home Type</label>
                        <div id="rdbHomeType">
                            <input type="radio" id="House" name="HomeType" value="House" />
                            <label for="House">House</label>
                            <input type="radio" id="Townhomes" name="HomeType" value="Townhomes" />
                            <label for="Townhomes">Townhomes</label>
                            <input type="radio" id="Multi-family" name="HomeType" value="Multi-family" />
                            <label for="Multi-family">Multi-family</label>
                            <input type="radio" id="Apartments" name="HomeType" value="Apartments" />
                            <label for="Apartments">Apartments</label>
                            <input type="radio" id="Manufactured" name="HomeType" value="Manufactured" />
                            <label for="Manufactured">Manufactured</label>
                            <input type="radio" id="Condos" name="HomeType" value="Condos" />
                            <label for="Condos">Condos</label>
                        </div>
                    </div>
                    <div id="PriceList">
                        <label for="txtMiniumAmount">Price Range</label>
                        <br />
                        <input type="number" id="txtMiniumAmount" name="txtMiniumAmount" placeholder="Minimum Amount" />
                        <input type="number" id="txtMaxAmount" name="txtMaxAmount" placeholder="Maximum Amount" />
                        <br />
                        <br />
                    </div>
                    <div id="NoOfBedrooms">
                        <label for="Bedrooms">Number of Bedrooms</label>
                        <br />
                        <input type="radio" id="rd1" name="Bedrooms" value="1" />
                        <label for="rd1">1+</label>
                        <input type="radio" id="rd2" name="Bedrooms" value="2" />
                        <label for="rd2">2+</label>
                        <input type="radio" id="rd3" name="Bedrooms" value="3" />
                        <label for="rd3">3+</label>
                        <input type="radio" id="rd4" name="Bedrooms" value="4" />
                        <label for="rd4">4+</label>
                        <input type="radio" id="rd5" name="Bedrooms" value="5" />
                        <label for="rd5">5+</label>
                    </div>
                    <div id="NoOfBathrooms">
                        <label for="Bathrooms">Number of Bathrooms</label>
                        <br />
                        <input type="radio" id="rad1" name="Bathrooms" value="1" />
                        <label for="rad1">1+</label>
                        <input type="radio" id="rad2" name="Bathrooms" value="2" />
                        <label for="rad2">2+</label>
                        <input type="radio" id="rad3" name="Bathrooms" value="3" />
                        <label for="rad3">3+</label>
                        <input type="radio" id="rad4" name="Bathrooms" value="4" />
                        <label for="rad4">4+</label>
                    </div>
                    <div id="Amenities">
                        <label for="Amenities">Amenities</label>
                        <br />
                        <div id="CheckboxList1">
                            <input type="checkbox" id="Electricity" name="Amenities" value="Electricity" />
                            <label for="Electricity">Electricity</label>
                            <input type="checkbox" id="WaterSupply" name="Amenities" value="WaterSupply" />
                            <label for="WaterSupply">Water Supply</label>
                            <input type="checkbox" id="GasSupply" name="Amenities" value="GasSupply" />
                            <label for="GasSupply">Gas Supply</label>
                            <input type="checkbox" id="SewageSystem" name="Amenities" value="SewageSystem" />
                            <label for="SewageSystem">Sewage System</label>
                            <input type="checkbox" id="HeatingSystem" name="Amenities" value="HeatingSystem" />
                            <label for="HeatingSystem">Heating System</label>
                            <input type="checkbox" id="CoolingSystem" name="Amenities" value="CoolingSystem" />
                            <label for="CoolingSystem">Cooling System</label>
                            <input type="checkbox" id="InternetAccess" name="Amenities" value="InternetAccess" />
                            <label for="InternetAccess">Internet Access</label>
                            <input type="checkbox" id="HotWaterHeater" name="Amenities" value="HotWaterHeater" />
                            <label for="HotWaterHeater">Hot Water Heater</label>
                            <input type="checkbox" id="TrashDisposal" name="Amenities" value="TrashDisposal" />
                            <label for="TrashDisposal">Trash Disposal</label>
                            <input type="checkbox" id="SmokeAlarm" name="Amenities" value="SmokeAlarm" />
                            <label for="SmokeAlarm">Smoke Alarm</label>
                            <input type="checkbox" id="SwimmingPool" name="Amenities" value="SwimmingPool" />
                            <label for="SwimmingPool">Swimming Pool</label>
                        </div>
                        <br />
                    </div>
                </div>
            </form>
        </div>

        <div class="homeDashboard container mt-4">
            <div class="row gx-3 gy-5">
                @foreach (var home in (List<Finial_Project_RealEstateWebPage.Models.Home>)ViewBag.HomesList)
                {
                    <div class="col-md-4 d-flex align-items-stretch">
                        <div class="card h-100 d-flex flex-column">
                            <div class="card-body">
                                <h5 class="card-title">@home.AskingPrice.ToString("C2")</h5>
                                <p class="card-text">
                                    <strong>@home.BedRooms</strong> bds | <strong>@home.BathRooms</strong> ba |
                                    <strong>@home.HomeSize</strong> sqft
                                    <br />
                                    @home.BuildingNumber @home.Street, @home.City, @home.State, @home.ZipCode
                                </p>
                            </div>
                            <div class="card-footer mt-auto">
                                <a asp-action="ViewPropertyInfo" asp-controller="ViewHome" asp-route-id="@home.PropertyID" class="btn btn-primary w-100">
                                    View More
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
 </div>

</body>
</html>
