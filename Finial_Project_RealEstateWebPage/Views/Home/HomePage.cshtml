@model Finial_Project_RealEstateWebPage.Models.Login

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "HomePage";
}

<!DOCTYPE html>

<html>
<head>
    <title>
        DashBord
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <br />
    <br />

    <div class="titleContainer">
        <div id="PageName">
            <h1>Mr.Home's</h1>
            <p>The best deals in town!!</p>
        </div>

        <div class="buttonContainer">
            <form asp-action="Login" asp-controller="Account" method="get" style="display: inline;">
                <button type="submit" class="btnAccount">Login</button>
            </form>
            <form asp-action="SignUp" asp-controller="Account" method="get" style="display: inline;">
                <button type="submit" class="btnAccount">Sign Up</button>
            </form>
        </div>

    </div>

</body>

</html>
