@{
}

@model Finial_Project_RealEstateWebPage.Models.Login

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>

<html>
    <head>
        <title>
            Reset Password
        </title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/LoginPage.css" />

    </head>
    <body>
        <h1>
            Password Reset
        </h1>
        <br/>
        <br />

    <form asp-controller="AccountVerification" asp-action="VerifyUserID" method="post" class="loginPage">

        <div class="input">
            <label for="UserID"></label>
            <input asp-for="UserID" value="David" />
        </div>

        
        <div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <button type="submit" class="loginPage" style="width: 91px;">Submit</button>

        </form>

    </body>

</html>
