@model Finial_Project_RealEstateWebPage.Models.Login

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
    <head>
        <title>
            Login
        </title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/LoginPage.css" />
        <link rel="stylesheet" href="~/css/nav.css" />

    </head>
    <body>

    <header>
        <nav class="custom-navbar">
            <div class="container">
                <a href="/Home/HomePageRun" class="brand">Mr. Home's</a>
            </div>
        </nav>
    </header>
     
    <form asp-controller="Account" asp-action="AddLogin" method="post" class="loginPage">
        <h1>
            Login
        </h1>

        <div class="input">
            <label for="UserID"></label>
            <input asp-for="UserID" value="David" />
        </div>

        <div class="input">
            <label for="Password"></label>
            <input asp-for="Password" type="password" value="Password" />
        </div>

        <div class="password-reset">
            <a href="/Account/PasswordReset" class="active">Forgot Password</a>
        </div>
        <div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <button type="submit" class="loginPage" style="width: 91px;">Login</button>

        </form>

    </body>

</html>
