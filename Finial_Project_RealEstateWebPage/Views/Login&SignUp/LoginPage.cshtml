@model Finial_Project_RealEstateWebPage.Models.Login

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
    <head>
        <title>
            Login
        </title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <h1>
            Login
        </h1>
        <br/>
        <br />

        <form asp-controller="Account" asp-action="AddLogin" method="post">
        <!-- Username -->
        <div class="form-group">
            <label asp-for="UserID" class="form-label"></label>
            <input asp-for="UserID" class="form-control" />
        </div>
        <!-- Password -->
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <!-- Message -->
        <div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
        <!-- Login Button -->
        <button type="submit" class="btn btn-primary" style="width: 91px;">Login</button>
        </form>

    </body>

</html>
