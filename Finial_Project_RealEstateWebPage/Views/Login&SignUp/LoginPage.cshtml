@model Finial_Project_RealEstateWebPage.Models.Login

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
    <head>
        <title>
            Login
        </title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/LoginPage.css" />

    </head>
    <body>
        <h1>
            Login
        </h1>
        <br/>
        <br />

    <form asp-controller="Account" asp-action="AddLogin" method="post" class="loginPage">

        <div class="input">
            <label asp-for="UserID"></label>
            <input asp-for="UserID" />
        </div>

        <div class="input">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
        </div>
        
        <div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <button type="submit" class="loginPage" style="width: 91px;">Login</button>
        </form>

    </body>

</html>
