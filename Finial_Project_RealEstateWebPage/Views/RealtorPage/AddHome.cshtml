@model Finial_Project_RealEstateWebPage.Models.HomeInfo

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    ViewData["Title"] = "Add Property";
}
<!DOCTYPE html>

<html>
<head>
    <title>
        DashBord
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/HomeViewing.css" />

</head>

    <body>
        <header>
            <a href="javascript:history.back()">Back</a>
        </header>
        <div class="titleContainer">
            <div id="PageName">
                <h1>Mr.Home's</h1>
                <p>The best deals in town!!</p>
            </div>
        </div>

         <form asp-controller="AddProperty" asp-action="AddHome">
            <div class="Addproperty">
                Building Number <input asp-for="BuildingNumber">
            </div>
            <div class="Addproperty">
            Street <input asp-for="Street">
            </div>
            <div class="Addproperty">
            City <input asp-for="City">
            </div>
            <div class="Addproperty">
            State <input asp-for="State">
            </div>
            <div class="Addproperty">
            Zip Code <input asp-for="ZipCode" type="number">
            </div>
            <div class="Addproperty">
            Property Type <input asp-for="PropertyType">
            </div>
            <div class="Addproperty">
            Year Built <input asp-for="YearBuilt" type="number">
            </div>
            <div class="Addproperty">
            Bedrooms <input asp-for="BedRooms" type="number">
            </div>
            <div class="Addproperty">
            Bathrooms <input asp-for="BathRooms" type="number">
            </div>
            <div class="Addproperty">
            Heating <input asp-for="Heating">
            </div>
            <div class="Addproperty">
            Cooling <input asp-for="Cooling">
            </div>
            <div class="Addproperty">
            Asking Price <input asp-for="AskingPrice" type="number">
            </div>
            <div class="Addproperty">
            Home Size <input asp-for="HomeSize">
            </div>
            <div class="Addproperty">
            Description <textarea asp-for="Description"></textarea>
            </div>
            <div class="Addproperty">
            Garage <input asp-for="Garage">
            </div>
            <div class="Addproperty">
            Property ID <input asp-for="PropertyID">
            </div>
            <div class="Addproperty">
            Agent ID <input asp-for="AgentID">
            </div>

        </form>

    </body>


</html>
