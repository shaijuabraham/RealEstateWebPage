@model Finial_Project_RealEstateWebPage.Models.associateclass.OfferClass

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

    ViewData["Title"] = "RelatorPage";
}

<!DOCTYPE html>

<html>
<head>
    <title>
        View Clients Offer
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/ViewOfferPage.css" />

</head>
    <body>
    <header>
        <nav class="custom-navbar">
            <div class="container">
                <h2>Mr.Home's</h2>
                <a href="javascript:history.back()"> Back </a>
            </div>
        </nav>
    </header>

    <div class="dashboard">
        <div class="showoffer">
            @if (ViewBag.RelatorProertyOffers != null && ViewBag.RelatorProertyOffers.Count > 0)
            {
                @foreach (var home in (List<Finial_Project_RealEstateWebPage.Models.associateclass.OfferClass>)ViewBag.RelatorProertyOffers)
                {
                            <div class="card-body">
                                <h5 class="card-title">@home.PropertyID</h5>
                            </div>
                            <div class="card-footer mt-auto text-center">
                        <a asp-action="ViewRealtorSelectedPropertyInfo" asp-controller="Realtor" asp-route-id="@home.PropertyID" class="btn btn-primary w-100">
                                    View More
                                </a>
                            </div>
                }
            }
            else
            {
                <p>No homes available to display.</p>
            }
        </div>
    </div>

    </body>
</html>
